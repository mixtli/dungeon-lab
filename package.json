{
  "name": "dungeon-lab",
  "version": "0.1.0",
  "description": "A Virtual Table Top (VTT) system for Table Top Role Playing Games",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/plugins/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace=@dungeon-lab/web",
    "dev:server": "npm run plugins:build && npm run dev --workspace=@dungeon-lab/server",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:web\"",
    "build": "npm run build --workspaces",
    "clean:build": "npx rimraf \"**/dist\" \"**/tsconfig.tsbuildinfo\" \"**/.vite\" \"**/coverage\" \"**/.turbo\"",
    "clean:deps": "npx rimraf node_modules \"**/node_modules\"",
    "clean:cache": "npm cache clean --force",
    "clean:full": "npm run clean:build && npm run clean:deps",
    "reset": "npm run clean:full && npm install",
    "build:shared": "cd packages/shared && npm run build",
    "build:server": "cd packages/server && npm run build",
    "build:web": "cd packages/web && npm run build",
    "test": "npm run test --workspaces",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint --workspaces -- --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md,vue}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss,md,vue}\"",
    "find-deadcode": "ts-prune",
    "plugins:build": "for dir in packages/plugins/dnd-5e-2024; do if [ -d \"$dir\" ]; then cd \"$dir\" && npm run build && cd ../../..; fi done",
    "plugins:dev": "for dir in packages/plugins/dnd-5e-2024; do if [ -d \"$dir\" ]; then cd \"$dir\" && npm run dev & fi done",
    "plugins:clean": "for dir in packages/plugins/dnd-5e-2024; do if [ -d \"$dir\" ]; then cd \"$dir\" && npm run clean && cd ../../..; fi done",
    "plugins:test": "npm run test:plugin-build --workspace=@dungeon-lab/web",
    "plugins:test:clean": "npm run clean:test --workspace=@dungeon-lab/web",
    "check": "npm run check --workspaces",
    "typecheck:watch": "tsc -b tsconfig.workspace.json --watch",
    "list": "node scripts/dev.js list",
    "generate": "node scripts/dev.js generate",
    "parse-prd": "node scripts/dev.js parse-prd",
    "import:users": "npm run import:users --workspace=@dungeon-lab/server",
    "import:characters": "npm run import:characters --workspace=@dungeon-lab/plugin-dnd-5e-2024-old",
    "import:maps": "npm run import:maps --workspace=@dungeon-lab/plugin-dnd-5e-2024-old",
    "import:campaigns": "npm run import:campaigns --workspace=@dungeon-lab/plugin-dnd-5e-2024-old",
    "import:classes": "npm run import:classes --workspace=@dungeon-lab/plugin-dnd-5e-2024-old",
    "import:species": "npm run import:species --workspace=@dungeon-lab/plugin-dnd-5e-2024-old",
    "import:backgrounds": "npm run import:backgrounds --workspace=@dungeon-lab/plugin-dnd-5e-2024-old",
    "import:feats": "npm run import:feats --workspace=@dungeon-lab/plugin-dnd-5e-2024-old",
    "import:monsters": "npm run import:monsters --workspace=@dungeon-lab/plugin-dnd-5e-2024-old",
    "import:spells": "npm run import:spells --workspace=@dungeon-lab/plugin-dnd-5e-2024-old",
    "import:items": "npm run import:items --workspace=@dungeon-lab/plugin-dnd-5e-2024-old",
    "import:all": "npm run import:users && npm run import:characters && npm run import:maps && npm run import:campaigns && npm run import:classes && npm run import:species && npm run import:backgrounds && npm run import:feats && npm run import:monsters && npm run import:spells && npm run import:items",
    "test:compendium": "npm test --workspace=@dungeon-lab/server -- compendium",
    "test:compendium:import": "npm test --workspace=@dungeon-lab/server -- compendium-import.test.mts",
    "test:compendium:basic": "npm test --workspace=@dungeon-lab/server -- compendium-basic.test.mts",
    "convert:foundry": "npm run dev --workspace=@dungeon-lab/foundry-converter --",
    "convert:foundry:spells": "npm run dev --workspace=@dungeon-lab/foundry-converter -- --input \"~/Library/Application Support/FoundryVTT/Data/systems/dnd5e/packs/spells24\" --output \"./compendiums/dnd5e-spells24\" --system \"dnd-5e-2024\" --verbose"
  },
  "keywords": [
    "vtt",
    "ttrpg",
    "virtual-tabletop",
    "dungeons-and-dragons",
    "pathfinder",
    "role-playing-games"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@playwright/test": "^1.51.1",
    "@tailwindcss/forms": "^0.5.10",
    "@types/sharp": "^0.31.1",
    "@types/uuid": "^10.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "ts-prune": "^0.10.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite-plugin-dynamic-import": "^1.6.0",
    "vue-tsc": "^2.2.8"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@heroicons/vue": "^2.2.0",
    "@pixi/devtools": "^2.0.1",
    "@types/minio": "^7.1.0",
    "@zodyac/zod-mongoose": "^3.2.0",
    "boxen": "^8.0.1",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "fastmcp": "^1.20.5",
    "figlet": "^1.8.0",
    "fuse.js": "^7.0.0",
    "gradient-string": "^3.0.0",
    "helmet": "^8.1.0",
    "inquirer": "^12.5.0",
    "jsonwebtoken": "^9.0.2",
    "just-handlebars-helpers": "^1.0.19",
    "lru-cache": "^10.2.0",
    "minio": "^8.0.4",
    "openai": "^4.89.0",
    "ora": "^8.2.0",
    "sharp": "^0.33.5",
    "uuid": "^11.1.0"
  },
  "type": "module"
}
