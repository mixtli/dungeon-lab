{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Mongo/Minio",
      "type": "shell",
      "command": "docker compose  --profile infra up",
      "isBackground": true,
      "presentation": {
        "reveal": "silent",
        "panel": "new"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "TypeScript: Check All",
      "type": "shell",
      "command": "npx tsc --noEmit --incremental false --project packages/server/tsconfig.json && npx tsc --noEmit --incremental false --project packages/web/tsconfig.json",
      "problemMatcher": ["$tsc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}
