{
    "typescript.tsdk": "node_modules/typescript/lib",
    //"typescript.enablePromptUseWorkspaceTsdk": true,
    "typescript.validate.enable": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/node_modules": true
    },
    "eslint.lintTask.enable": true,
    "eslint.validate": [
        "javascript",
        "typescript",
        "typescriptreact"
    ],
    "editor.formatOnSave": false,
    "editor.formatOnPaste": true,
    // IMPORTANT: Setting this to true causes hundreds of false TypeScript errors
    // Keep this false to prevent spurious errors with ESM imports (.mjs extensions)
    "typescript.tsserver.experimental.enableProjectDiagnostics": true,

    "typescript.tsserver.log": "verbose",
    "problems.excludePatterns": [
        "**/node_modules/**",
        "**/dist/**",
        "**/build/**",
        "**/coverage/**",
        "**/logs/**",
        "**/.github/workflows/**"
    ]
}