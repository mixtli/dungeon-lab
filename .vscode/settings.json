{
    "typescript.tsdk": "node_modules/typescript/lib",
    //"typescript.enablePromptUseWorkspaceTsdk": true,
    "typescript.validate.enable": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/node_modules": true
    },
    "eslint.lintTask.enable": true,
    "eslint.validate": [
        "javascript",
        "typescript",
        "typescriptreact"
    ],
    "editor.formatOnSave": false,
    "editor.formatOnPaste": true,
    // IMPORTANT: Setting this to true causes hundreds of false TypeScript errors
    // Keep this false to prevent spurious errors with ESM imports (.mjs extensions)
    "typescript.tsserver.experimental.enableProjectDiagnostics": false,
    "python.analysis.extraPaths": [
        "ai-workflows/src"
    ],

    "typescript.tsserver.log": "normal",
    "problems.excludePatterns": [
        "**/node_modules/**",
        "**/dist/**",
        "**/build/**",
        "**/coverage/**",
        "**/logs/**",
        "**/.github/workflows/**"
    ],
    "postman.settings.dotenv-detection-notification-visibility": false,
    "git.ignoreLimitWarning": true,
    "python.defaultInterpreterPath": ".venv/bin/python",
    "python.autoComplete.extraPaths": [
        "ai-workflows/src"
    ],
    "python.analysis.include": [
        "ai-workflows/src"
    ],
    "pylint.cwd": "${workspaceFolder}/ai-workflows",
    "pylint.importStrategy": "fromEnvironment",
    "python.analysis.fixAll": [
        "source.unusedImports"
    ],
    "ruff.nativeServer": "on",
    "pylint.enabled": false
}