{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "noErrorTruncation": true,
    "outDir": "./dist",  // All compiled files will go here
    "noEmit": true       // Or use this if you're using Vite/webpack/etc and don't need tsc to emit files

  }
} 