{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "paths": {
      "@dungeon-lab/shared": ["../../shared/src"],
      "@dungeon-lab/shared/*": ["../../shared/src/*"],
      "@dungeon-lab/server": ["../../server/src"],
      "@dungeon-lab/server/*": ["../../server/src/*"]
    }
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.mts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.mjs"
  ],
  "references": [
    { "path": "../../shared" },
  ],
  "ts-node": {
    "esm": true
  }
} 