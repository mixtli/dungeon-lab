{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "lib": [
      "DOM",
      "ES2022"
    ],
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@dungeon-lab/shared": [
        "../../shared/src"
      ],
      "@dungeon-lab/shared/*": [
        "../../shared/src/*"
      ],
      "@dungeon-lab/shared-ui": [
        "../../shared-ui/src"
      ],
      "@dungeon-lab/shared-ui/*": [
        "../../shared-ui/src/*"
      ],
      "@dungeon-lab/client": [
        "../../client/src"
      ],
      "@dungeon-lab/client/*": [
        "../../client/src/*"
      ]
    },
    "strict": true,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noUnusedLocals": true,
    "noImplicitAny": true
  },
  "include": [
    "src/**/*.mts",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.*",
    "**/*.spec.*"
  ],
  "references": [
    {
      "path": "../../shared"
    },
    {
      "path": "../../shared-ui"
    },
    {
      "path": "../../client"
    }
  ]
}
