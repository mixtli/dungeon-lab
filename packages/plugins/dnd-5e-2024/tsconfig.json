{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@dungeon-lab/shared": ["../../shared/src"],
      "@dungeon-lab/shared/*": ["../../shared/src/*"]
    }
  },
  "include": ["src/**/*.mts", "src/**/*.ts", "src/**/*.js", "src/**/*.mjs"],
  "references": [
    { "path": "../../shared" }
  ]
} 