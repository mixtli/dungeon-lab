{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noUnusedLocals": true,
    "paths": {
      "@dungeon-lab/shared": ["../shared/src"],
      "@dungeon-lab/shared/*": ["../shared/src/*"]
    }
  },
  "references": [{ "path": "../shared" }],
  "include": ["src/**/*.ts", "src/**/*.mts", "src/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.mts"]
}
