{
  "name": "@dungeon-lab/server",
  "version": "0.1.0",
  "description": "Express backend server for Dungeon Lab",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx --inspect=9229 --watch src/index.mts",
    "start": "node --experimental-specifier-resolution=node dist/index.mjs",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "import-data": "tsx src/scripts/import-sample-data.ts"
  },
  "dependencies": {
    "@dungeon-lab/shared": "file:../shared",
    "@dungeon-lab/plugin-dnd-5e-2024": "file:../plugins/dnd-5e-2024",
    "@types/multer": "^1.4.12",
    "bcrypt": "^5.1.1",
    "connect-mongo": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-async-handler": "^1.2.0",
    "express-session": "^1.18.1",
    "helmet": "^7.1.0",
    "minio": "^8.0.4",
    "mongoose": "^8.11.0",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "socket.io": "^4.7.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.1",
    "@types/node": "^20.10.5",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^8.56.0",
    "glob": "^11.0.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.13.1",
    "typescript": "^5.3.3",
    "vitest": "^1.6.1"
  }
}