{
  "name": "@dungeon-lab/server",
  "version": "0.1.0",
  "description": "Express backend server for Dungeon Lab",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "check": "npm run build --workspace=@dungeon-lab/shared && tsc --noEmit",
    "lint": "eslint src",
    "dev": "nodemon --exec \"tsx --inspect=9229 --watch src/index.mts\"",
    "start": "node --experimental-specifier-resolution=node dist/index.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "import:users": "tsx src/scripts/import-users.mts",
    "upload-compendium": "tsx scripts/upload-compendium.mts",
    "reassign:characters": "tsx src/scripts/reassign-character-ownership.mts",
    "reassign:characters:dry-run": "tsx src/scripts/reassign-character-ownership.mts --dry-run"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.3.9",
    "@dungeon-lab/shared": "file:../shared",
    "@fastify/deepmerge": "^3.1.0",
    "@pulsecron/pulse": "^1.6.8",
    "@socket.io/admin-ui": "^0.5.1",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/uuid": "^10.0.0",
    "@types/yauzl": "^2.10.3",
    "@wesleytodd/openapi": "^1.1.0",
    "ai": "^4.3.4",
    "bcrypt": "^5.1.1",
    "connect-mongo": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-async-handler": "^1.2.0",
    "express-session": "^1.18.1",
    "helmet": "^7.1.0",
    "mime-types": "^2.1.35",
    "minio": "^8.0.4",
    "mongoose": "^8.11.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.93.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "sharp": "^0.34.1",
    "socket.io": "^4.7.2",
    "uuid": "^11.1.0",
    "yauzl": "^3.2.0",
    "zod": "^3.22.4",
    "zod-openapi": "^4.2.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.1",
    "@types/node": "^20.10.5",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^9.25.0",
    "glob": "^11.0.1",
    "globals": "^16.0.0",
    "mongodb-memory-server": "^10.1.4",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.13.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^1.6.1"
  }
}
