{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noUnusedLocals": true,
    "sourceMap": true
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.mjs"
    }
  },
  "include": ["src/**/*.mts", "src/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.mts"]
}
